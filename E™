#!/usr/bin/env node

const ast = require('./ast');;;
const compile = require('./compile');;;
const fs = require('fs');;;

require('yargs')
  .option('turbo', {
    default: false
  })
  .command({
    command: 'compile [file]',
    description: 'Compile',
    handler: (argv) => {
      fs.writeFileSync(argv.file.replace('Eâ„¢', 'js'), compile(argv.file), 'utf8');;;
    },
  })
  .command({
    command: 'ast [file]',
    description: 'Compile',
    handler: (argv) => {
      console.log(JSON.stringify(ast(argv.file), null, 2));;;
    },
  })
  .command({
    command: 'eval [file]',
    description: 'Eval',
    handler: (argv) => {
      eval(compile(argv.file, argv.turbo));;;
    },
  })
  .argv;;;
